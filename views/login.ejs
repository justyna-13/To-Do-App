<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="../public/assets/styles.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,600" rel="stylesheet">
    <title>To Do App</title>
    <!-- <style>
        button {
            color: blue;
        }
    </style> -->
</head>

<body>
    <article class="blue-grey lighten-5 center-align">
        <div class="container white">
            <header>
                <a href="#" class="header">
                    <img src="../public/main_icon.jpg" width="80px" height="80px" alt="main_icon">
                    <h1>ToDoApp</h1>
                </a>
            </header>
            <main class="container">
                <div class="social ">
                    <button>
                        <div class="social-inner">
                            <img src="https://img.icons8.com/color/48/000000/google-logo.png" class="google-icon">
                        </div>
                        <div class="social-inner">
                            Log in with Google Account
                        </div>
                    </button>
                    <button>
                        <div class="social-inner">
                            <i class="fab fa-facebook"></i>
                        </div>
                        <div class="social-inner">
                            Log in with Facebook Account
                        </div>
                    </button>
                </div>
                <p class="hr">OR</p>
                <% include ./partials/msg %>

                <form action="/users/login" method="POST">
                    <div class="login-data">
                        <input name="email" type="email" class="browser-default" placeholder="&#xf0e0;   Email"
                            style="font-family:Arial, FontAwesome" />
                        <input name="password" type="password" class="browser-default" placeholder="&#xf023;   Password"
                            style="font-family:Arial, FontAwesome" />
                        <div class="login-button">
                            <button id="login-text" type="submit" class="">Login</button>
                            <!-- <button>
                            <div id="login-text">Log in</div>
                        </button> -->
                        </div>
                    </div>
                </form>
                <div class="paragraphs">
                    <div>
                        <a href="#">
                            <font color="#ff6d24">Forgot your password?</font>
                        </a>
                    </div>
                    <div>
                        Need additional help?
                        <a href="#">
                            <font color="#ff6d24">Contact ToDoApp Support</font>
                        </a>
                    </div>
                    <div>
                        Sign up in seconds
                        <a href="/users/register">
                            <font color="#ff6d24">Sign up in seconds</font>
                        </a>
                    </div>

                </div>
            </main>
        </div>
    </article>

</body>

</html>